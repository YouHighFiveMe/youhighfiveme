{% extends 'PortalAppBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact us</h1>
    </header>

    {% if app.session.hasFlash('app-notice') %}
        <div class="app-notice">
            {{ app.session.flash('app-notice') }}
        </div>
    {% endif %}

    <p>Want to contact us?</p>

    <form action="{{ path('PortalAppBundle_contact') }}" method="post" {{ form_enctype(form) }} class="blogger">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}