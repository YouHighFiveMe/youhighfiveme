{% extends 'PortalAppBundle::layout.html.twig' %}

{% block content %}
    <h2 class="p8" xmlns="http://www.w3.org/1999/html"><span class="color-1">Browse</span> all events</h2>
    {% for event in events %}
        <article class="event">
            <div class="author">
                <a href="{{ path('PortalAppBundle_event_view', { 'eventId': event.shortUrl }) }}"><img src="{{ gravatar(event.user.getEmail()) }}"/></a>
            </div>
            <div class="data">
                <header>
                    <h3><a href="{{ path('PortalAppBundle_event_view', { 'eventId': event.shortUrl }) }}">{{ event.title }}</a></h3>
                    {{ event.created|date('M d, Y') }} by <a href="{{ path('PortalAppBundle_cv') }}/{{ event.user.getUserName() }}">{{ event.user.getName() }}</a>
                </header>
                <p class="description">{{ event.description|show_maxlen(65, '...') }}</p>
                <p class="count"><img src="{{ asset('images/hand.gif') }}"/>{{ event.countHighfives }} high fives</p>
            </div>
        </article>
    {% else %}
        <p class="p2"><strong>No events found...</strong></p>
    {% endfor %}
{% endblock content %}

